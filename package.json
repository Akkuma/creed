{
  "name": "creed",
  "version": "0.1.3",
  "description": "Forward-looking async toolkit: promises, iterators, generators",
  "main": "creed.js",
  "files": [
    "creed.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/briancavalier/creed.git"
  },
  "scripts": {
    "build-lib": "babel --loose es6.classes --blacklist es6.modules -q -d build src",
    "build-dist": "npm run build-lib && esperanto -b -t umd -o creed.js -i ./build/Promise.js -s -n creed",
    "prepublish": "npm run build-dist",
    "clean": "rimraf build creed.js coverage",
    "test-aplus": "promises-aplus-tests test/aplus.js",
    "test-main": "istanbul cover --root src _mocha",
    "test": "jscs -x src && npm run build-dist && npm run test-main && npm run test-aplus"
  },
  "author": "brian@hovercraftstudios.com",
  "license": "MIT",
  "devDependencies": {
    "assert": "^1.3.0",
    "babel": "^5.6.23",
    "chai": "^3.1.0",
    "esperanto": "^0.7.3",
    "istanbul": "^0.3.17",
    "jscs": "^1.13.1",
    "mocha": "^2.2.5",
    "promises-aplus-tests": "^2.1.1",
    "rimraf": "^2.4.1"
  }
}
